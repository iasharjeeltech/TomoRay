@{
    ViewData["Title"] = "TomoRay Dashboard";
}

<style>
    .hero-section {
        background: linear-gradient(135deg, #1f1c2c, #928dab);
        color: white;
        border-radius: 16px;
        padding: 60px 30px;
        box-shadow: 0 8px 16px rgba(0,0,0,0.25);
    }

    .feature-card {
        background: #fff;
        border: none;
        border-radius: 16px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        transition: 0.3s ease;
    }

    .feature-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.2);
    }

    .feature-icon {
        font-size: 40px;
        color: #0d6efd;
    }
</style>

<div class="container py-5">

    <div class="hero-section text-center mb-5">
        <h1 class="display-5 fw-bold mb-3">Welcome to TomoRay</h1>
        <p class="lead mb-4">Your smart Workforce Task & Attendance Manager built with ASP.NET Core MVC.</p>
        <a href="/User/Register" class="btn btn-light btn-lg me-2">Get Started</a>
        <a href="/User/Login" class="btn btn-outline-light btn-lg">Login</a>
    </div>

    <div class="row text-center g-4">
        <div class="col-md-4">
            <a asp-controller="Attendance" asp-action="Mark" class="text-decoration-none text-dark">
                <div class="card feature-card p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-calendar-check"></i>
                    </div>
                    <h5 class="fw-bold">Smart Attendance</h5>
                    <p>Capture attendance using webcam, GPS, and watermarked photo verification.</p>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <div class="card feature-card p-4">
                <div class="feature-icon mb-3">
                    <i class="bi bi-kanban"></i>
                </div>
                <h5 class="fw-bold">Task Management</h5>
                <p>Assign tasks, track status, and ensure your team stays aligned.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card feature-card p-4">
                <div class="feature-icon mb-3">
                    <i class="bi bi-box-seam"></i>
                </div>
                <h5 class="fw-bold">Inventory Control</h5>
                <p>Manage items, issue tracking, and usage logs — all from one dashboard.</p>
            </div>
        </div>
    </div>

    <p class="text-center text-muted mt-5 small">Made with ❤️ by Team TomoRay | ASP.NET Core MVC | Clean Architecture</p>

</div>
